// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id String @id @default(uuid())

  name       String
  username   String
  password   String
  avatar_url String
  bio        String
  created_at DateTime @default(now())

  feedbacks       Feedbacks[] @relation("Feedback")
  pinnedFeedbacks Feedbacks[] @relation("Pinned")

  @@map("users")
}

model Feedbacks {
  id      String @id @default(uuid())
  user_id String
  user    Users  @relation("Feedback", fields: [user_id], references: [id], map: "feedbacks_user_id")

  pinned_by String
  pinnedBy  Users  @relation("Pinned", fields: [user_id], references: [id], map: "feedbacks_pinned_by_id")

  title      String
  content    String
  type       String
  created_at DateTime @default(now())

  @@map("feedbacks")
}
